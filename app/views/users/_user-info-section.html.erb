<h2>User Info</h2>

	<table class='table'>
		<tr><%= attachment_image_tag user, :image, :fill, 100, 100,fallback: "no_image.jpg", format:'jpeg' %></tr>
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
	</table>

<div class="row">
	<div class="col-md-offset-1 col-md-10">
		<%= link_to "Edit my profile",edit_user_path(current_user.id),class:"edit_user_#{current_user.id}" %>
	</div>
</div>