<html>
<head>
</head>
<body>
	<div class='body'>
			<div class= 'container'>

				<p id= "notice"></p>

				<div class="row">
					<div class="col-md-3">

						<%= render 'users/user-info-section',user: @user %>

						<div class="row">
							<div class="col-md-12">

								<%= render 'books/newbook-form',book:@book %>


							</div>
						</div>
					</div>
							<div class = 'col-md-9'>
								<h2>Books</h2>
								<table class ='table table-hover table-inverse'>
									<thead>
										<tr>
											<th></th>
											<th>Title</th>
											<th>Opinion</th>
											<th clospan="3"></th>
										</tr>
									</thead>

									<tbody>
										<% @books.each do |book| %>
										<tr>
											<td><%= attachment_image_tag book.user, :image, :fill, 80, 80,fallback: "no_image.jpg", format:'jpeg' %></td>
											<td><%= link_to "#{book.book_title}",book_path(book.id),class:"book_#{book.id}" %></td>
											<td><%= book.book_body %></td>
										</tr>
										<% end %>
									</tbody>
								</table>
							</div>
				</div>
			</div>
	</div>
</body>
</html>