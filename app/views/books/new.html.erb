<!-- <form> -->
<%= form_for(@book, url: books_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-10">
      <label>Title</label>
      <%= f.text_field :book_title, class:"book_title" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-6">
      
        <label>opinion</label>
        <%= f.text_area :book_body, class:"book_body" %>
        
      </div>
  </div>
  <%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
<!-- </form> -->