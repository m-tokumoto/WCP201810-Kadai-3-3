<h2>New book</h2>
	<%= form_for(@book, url:books_path) do |f| %>
	<% if @book.errors.any? %>
		<div id="error_explanation">
			<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="row">
			<div class="col-md-12">
				<label>Title</label><br>
				<%= f.text_field :book_title, class:"book_title" %>
			</div>
		</div>
			<br>
		<div class="row">
			<div class="col-md-12">
				<label>opinion</label><br>
				<%= f.text_area :book_body, class:"book_body" %>
			</div>
		</div>
			<div class="col-md-12">
				<%= f.submit "Create Book", class:"btn btn-primary " %>
			</div>
	<% end %>